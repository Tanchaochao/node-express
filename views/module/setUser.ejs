<%- include("../include/css") %>
<body>
	<form action="/user/setUser" method="post" id="myform">
		<table border="none" cellspacing="0" cellpadding="0">
			<tr>
				<th>姓名</th>
				<th>密码</th>
				<th>昵称</th>
				<th>年龄</th>
			</tr>
			<tr>
				<td><input type="text" name="username" placeholder="请输入用户名" value="张三"/></td>
				<td><input type="text" name="password" placeholder="请输入用户密码" value="123456"/></td>
				<td><input type="text" name="nikeName" placeholder="请输入昵称" value="生活在别处"/></td>
				<td><input type="text" name="age" placeholder="请输入年龄" value="22"/></td>
			</tr>
		</table>
		<button class="submit" onclick="save();">提交</button>
	</form>
</body>
<%- include("../include/js") %>
<script type="text/javascript">
	function save(){
		var data=$('#myform').serialize();
		$.ajax({
			type:"post",
			url:"/user/setUser",
			data:data,
			async:true,
			success:function(res){
				console.log(res)
			},
			error:function(error){
				console.log(error)
			}
		});
	}
	
</script>